{
    /**
    * VS Code General
    */
    "window.title": "${dirty}${activeEditorLong}${separator}${rootName}",
    "files.associations": {},
    "files.exclude": {
        "**/*.lock": false,
        "wp-content/themes/view/dist/**.*": true,
    },
    // "editor.insertSpaces": true,
    // "editor.tabSize": 9,
    "editor.tabCompletion": "on", // Enable Snippets
    "emmet.showSuggestionsAsSnippets": true,
    /**
    * Stylelint
    */
    // "stylelint.configFile": "wp-content/themes/view/.stylelintrc",
    "stylelint.syntax": "scss",
    "stylelint.validate": ["css"],
    /**
    * Composer - https://marketplace.visualstudio.com/items?itemName=ikappas.composer
    */
    "composer.executablePath": "/usr/local/bin/composer",
    /**
    * PHP Sniffer & Beautifier - https://marketplace.visualstudio.com/items?itemName=ValeryanM.vscode-phpsab
    */
    "phpsab.standard": "./phpcs.xml",
    "phpsab.snifferMode": "onType",
    "phpsab.snifferTypeDelay": 400,
    "phpsab.snifferShowSources": true,
    "phpsab.executablePathCS": "vendor/bin/phpcs",
    "phpsab.executablePathCBF": "vendor/bin/phpcbf",
    "phpsab.fixerEnable": true,
    /**
    * PHPCS - https://marketplace.visualstudio.com/items?itemName=ikappas.phpcs
    */
    "phpcs.standard": "./phpcs.xml",
    /**
    * Search Node modules vscode - https://marketplace.visualstudio.com/items?itemName=jasonnutter.search-node-modules
    */
    "search-node-modules.path": "./wp-content/themes/view/node_modules",
    /**
    * ESLint
    */
    // "eslint.format.enable": true,
    // "eslint.options": {
    //     "configFile": "./.eslintrc"
    //     // "configFile": "wp-content/themes/view/.stylelintrc"
    // },
    // "eslint.workingDirectories": [{ "mode": "auto" }],
    // "eslint.workingDirectories": [
    //     "wp-content/themes/view",
    //     "wp-content/plugins/custom",
    // ],
    /**
    * Intelephense
    */
    "intelephense.format.enable": false,
    /**
    * Headwind
    */
    "headwind.runOnSave": true,
    "headwind.prependCustomClasses": true,
    /**
    * Code Actions on Save
    */
    "editor.codeActionsOnSave": {
        // "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true,
    },
    /**
    * Language specific settings
    */
    "[php]": {
        "editor.formatOnSave": true,
    },
    "[js]": {
        "editor.formatOnSave": false,
        // "source.fixAll.eslint": true,
    },
    "[css]": {
        "editor.formatOnSave": false,
    },
    "[json]": {
        "editor.formatOnSave": true,
    },
    "[twig]": {
        "editor.snippetSuggestions": "top",
    },
    "eslint.format.enable": true,
}