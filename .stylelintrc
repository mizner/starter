{
  "defaultSeverity": "warning",
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "screen",
          "variants",
          "tailwind"
        ]
      }
    ],
    "selector-no-qualifying-type": [
      true,
      {
        "ignore": [
          "attribute",
          "class",
          "id"
        ]
      }
    ],
    "max-nesting-depth": 3,
    "order/order": [
      [
        "custom-properties",
        "declarations"
      ]
    ]
  }
}