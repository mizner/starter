<header class="header" role="banner">
	<section class="header__wrapper">
		<div class="header__logo">
			<a href="{{site.url}}" class="" rel="home">
				<h1 class="screen-reader-text">{{site.name}}</h1>
				{% include "logo-regular.svg" %}
			</a>
		</div>
		<div class="header__menu flex flex-wrap items-center justify-between">
			<div class="header-menu-desktop lg:block hidden">
				<nav id="navMain" class="nav-main" role="navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">
					{% include "molecules/menu.twig" with {'items': menus.header_primary.get_items} %}
				</nav>
			</div>
			<div class="header-menu-mobile lg:hidden">
				<button class="nav-mobile-toggle">
					<svg class="icon w-8 h-8">
						<use xlink:href="#icon-bars"></use>
					</svg>
				</button>
				<nav id="navMobile" class="nav-mobile" role="navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">
					<div class="relative">
						<button class="nav-mobile-toggle">
							<svg class="icon w-8 h-8">
								<use xlink:href="#icon-times"></use>
							</svg>
						</button>
						{% include "molecules/menu.twig" with {'items': menus.header_primary.get_items} %}
					</div>
				</nav>
			</div>
		</div>
	</section>
</header>
